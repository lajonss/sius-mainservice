:key = f340600cd80455ead9b0982d9c8b7d71db0b03df

# login
POST :addr/rest-auth/login/
Content-Type: application/json
{
	"username": "admin",
	"password": "adminpass1"
}

# POST new app
POST :addr/app/
Content-Type: application/json
Authorization: Token :key
{
	"name": "emacs"
}

# GET app info
GET :addr/app/emacs/

# GET user
